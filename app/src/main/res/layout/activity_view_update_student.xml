<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewUpdateStudent">

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:text="GPA"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_v_viewupdate_gpa"
        app:layout_constraintEnd_toEndOf="@+id/textView27"
        app:layout_constraintStart_toEndOf="@+id/tv_v_viewupdate_errorMessage" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_v_viewupdate_age"
        app:layout_constraintEnd_toEndOf="@+id/textView30"
        app:layout_constraintStart_toStartOf="@+id/textView30" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="28dp"
        android:text="Username"
        app:layout_constraintBottom_toTopOf="@+id/et_v_viewupdate_email"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:text="Major"
        app:layout_constraintBaseline_toBaselineOf="@+id/sp_v_viewupdate_major"
        app:layout_constraintStart_toEndOf="@+id/sp_v_viewupdate_major" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:text="Last Name"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_v_viewupdate_lName"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="Email"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_v_viewupdate_email"
        app:layout_constraintEnd_toEndOf="@+id/textView28"
        app:layout_constraintStart_toStartOf="@+id/textView27" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="14dp"
        android:text="First Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_v_viewupdate_lName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="14dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toStartOf="@+id/textView26"
        app:layout_constraintTop_toBottomOf="@+id/et_v_viewupdate_fName" />

    <EditText
        android:id="@+id/et_v_viewupdate_fName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/textView24"
        app:layout_constraintEnd_toStartOf="@+id/textView24" />

    <EditText
        android:id="@+id/et_v_viewupdate_gpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/btn_v_viewupdate_back"
        app:layout_constraintEnd_toStartOf="@+id/textView30" />

    <EditText
        android:id="@+id/et_v_viewupdate_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="19dp"
        android:ems="10"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toStartOf="@+id/textView29"
        app:layout_constraintTop_toBottomOf="@+id/sp_v_viewupdate_major" />

    <TextView
        android:id="@+id/tv_v_viewupdate_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="51dp"
        android:text="TextView"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/et_v_viewupdate_email"
        app:layout_constraintTop_toBottomOf="@+id/et_v_viewupdate_lName" />

    <TextView
        android:id="@+id/tv_v_viewupdate_errorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginBottom="9dp"
        android:text="This cannot be updated."
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/tv_v_viewupdate_username"
        app:layout_constraintStart_toStartOf="@+id/tv_v_viewupdate_username" />

    <Button
        android:id="@+id/btn_v_viewupdate_update"
        android:layout_width="128dp"
        android:layout_height="70dp"
        android:layout_marginBottom="53dp"
        android:text="Update"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/et_v_viewupdate_gpa"
        app:layout_constraintStart_toStartOf="@+id/et_v_viewupdate_gpa" />

    <Button
        android:id="@+id/btn_v_viewupdate_back"
        android:layout_width="128dp"
        android:layout_height="0dp"
        android:text="Back"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_v_viewupdate_update"
        app:layout_constraintEnd_toEndOf="@+id/et_v_viewupdate_gpa"
        app:layout_constraintStart_toEndOf="@+id/et_v_viewupdate_gpa"
        app:layout_constraintTop_toTopOf="@+id/btn_v_viewupdate_update" />

    <Spinner
        android:id="@+id/sp_v_viewupdate_major"
        android:layout_width="210dp"
        android:layout_height="47dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_v_viewupdate_email"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="64dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/sp_v_viewupdate_major"
        app:layout_constraintEnd_toEndOf="@+id/textView33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_v_viewupdate_errorMessage" />

</androidx.constraintlayout.widget.ConstraintLayout>