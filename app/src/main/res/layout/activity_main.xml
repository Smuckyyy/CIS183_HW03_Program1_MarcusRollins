<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/lv_v_listOfStudents"
        android:layout_width="411dp"
        android:layout_height="604dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_v_addStudent"
        android:layout_width="127dp"
        android:layout_height="65dp"
        android:text="Add Student"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="637dp" />

    <Button
        android:id="@+id/btn_v_addMajor"
        android:layout_width="116dp"
        android:layout_height="66dp"
        android:text="Add Major"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="636dp" />

    <Button
        android:id="@+id/btn_v_searchData"
        android:layout_width="126dp"
        android:layout_height="65dp"
        android:text="Search Data"
        tools:layout_editor_absoluteX="278dp"
        tools:layout_editor_absoluteY="636dp" />
</androidx.constraintlayout.widget.ConstraintLayout>